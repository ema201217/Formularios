<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movie add</title>
    <link rel='stylesheet' href='/css/style.css' />
    <script src="/js/moviesAddAndEditValidation.js" defer></script>
</head>

<body>
    <figure>
        <img src="/img/logo-DH.png" alt="Logo Digital House">
    </figure>
    <h1 class="moviesAddTitulo"></h1>
    <br>
    <section id="formulario">
        <article>
            <form action="/movies/create" method="POST">
                <label for="title">Titulo </label>
                <p><input type="text" name="title" id="title"></p>

                <label for="rating">Calificación </label>
                <p><input type="text" name="rating" id="rating"> </p>

                <label for="awards">Premios </label>
                <p><input type="text" name="awards" id="awards"></p>

                <label for="release_date">Fecha de creación </label>
                <p><input type="date" name="release_date" id="release_date"></p>

                <label for="length">Duración </label>
                <p><input type="text" name="length" id="length"></p>

                <label for="genreID">Género </label>
                <p>
                    <select name="genre_id" id="genre">
                        <option value="" disabled selected>- Seleccione el género - </option>
                        <% allGenres.forEach(genre=> { %>
                            <option value="<%= genre.id %>">
                                <%= genre.name %>
                            </option>
                            <% }); %>
                    </select>
                </p>

                <br>
                <ul class="errores">
                    <li>
                        <p><span class="errTitle err"></span></p>
                    </li>
                    <li>
                        <p><span class="errRating err"></span></p>
                    </li>
                    <li>
                        <p><span class="errAwards err"></span></p>
                    </li>
                    <li>
                        <p><span class="errReleaseDate err"></span></p>
                    </li>
                    <li>
                        <p><span class="errLength err"></span></p>
                    </li>
                    <li>
                        <p><span class="errGenre err"></span></p>
                    </li>
                    
                    
                    
                    
                    
                    
                </ul>
                <br>
                <p> <button class="botonAgregar" type="submit">Agregar</button>
                    <p><span class="submitErrors err"></span></p>

                    <a class="botonVolver" href="/movies">Listado de Películas</a>
                </p>
            </form>
        </article>
    </section>
</body>

</html>